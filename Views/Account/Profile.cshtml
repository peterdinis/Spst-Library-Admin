@model SpstLibrary_Admin.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="text-center">User Profile</h2>
        
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">First Name:</dt>
                            <dd class="col-sm-8">@Model.FirstName</dd>

                            <dt class="col-sm-4">Last Name:</dt>
                            <dd class="col-sm-8">@Model.LastName</dd>

                            <dt class="col-sm-4">Member since:</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-3">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>